@model AptekaKg.ViewModels.BacsketViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
	<div class="menu">
		<div class="container">
			<div class="menu_box">
				<ul class="megamenu skyblue">
					@foreach (var cat in Model.Categories)
					{
						<li>
							<a class="color10" asp-controller="Category" asp-action="Index" asp-route-catid="@cat.Id" style=" width:120px;text-align:center;">@cat.Name</a>
							<div class="megapanel">
								<div class="row">
									@{
										var integer = 0;
										var count = Model.SubCategories.Where(x => x.CategoryId == cat.Id).Count();
										double ans = count / 8;
										ans = Math.Round(ans);
										var catlist = Model.SubCategories.Where(x => x.CategoryId == cat.Id).ToArray();
									}
									@for (int i = 0; i < ans; i++)
									{
										<div class="col1">
											<div class="h_nav">
												<ul>
													@for (int k = i * 8; k <= (i * 8 + 8) - 1; k++)
													{
														<li><a asp-controller="Category" asp-action="Index" asp-route-subcatid="@catlist[k].Id">@catlist[k].Name</a></li>
													}
												</ul>
											</div>
										</div>

									}
								</div>
							</div>
						</li>
					}
					<div class="clearfix"> </div>
				</ul>
			</div>
		</div>
	</div>
	<div class="men">
		<div class="container">
			<div class="wishlist">
				@if (@Model.Medicines.ToList().Count == 0)
				{
				<h4 class="title">Shopping cart is empty</h4>
					<p class="cart">You have no items in your shopping cart.<br>Click<a href="index.html"> here</a> to continue shopping</p>
				}
				else
				{
					<div class="col-md-8">
					@foreach(var med in Model.Medicines)
					{
						<div class="a-top">
							<div class="left-grid">
								<img src="@med.ImageUrl" class="img-responsive" alt="" />
							</div>
							<div class="right-grid">
								<h3>@med.Name</h3>
								<h5>@med.Price c</h5>
							</div>
							<div class="clearfix"></div>
						</div>
					}
					<div class="clearfix"></div>
					</div>
				}
				<h3>Цена:@ViewBag.Price c</h3>
				<form method="post" asp-controller="Account" asp-action="Buy" asp-route-price="@ViewBag.Price">
					<button class="acount-btn"><input class="acount-btn" id="inputlog" type="submit" value="Купить" /></button>
				</form>
			</div>
		</div>
	</div>
	<div class="footer">
		<div class="container">
			<img src="images/pay.png" class="img-responsive" alt="" />
			<ul class="footer_nav">
				<li><a href="#">Home</a></li>
				<li><a href="#">Blog</a></li>
				<li><a href="#">Shop</a></li>
				<li><a href="#">Media</a></li>
				<li><a href="#">Features</a></li>
				<li><a href="#">About Us</a></li>
				<li><a href="contact.html">Contact Us</a></li>
			</ul>
			<p class="copy">Copyright&copy; 2015 Template by <a href="http://w3layouts.com" target="_blank"> w3layouts</a></p>
		</div>
	</div>
</body>